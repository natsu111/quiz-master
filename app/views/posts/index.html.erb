<h2>これはクイズアプリです</h2>
<div class="addquiz">
    <h3><%= link_to "クイズを作る", new_post_path %></h3>
</div>

<h3>クイズ一覧</h3>
<ul>
<% @posts.each do |post| %>
    <li>
    <p>
    <%= post.content %>
    <%= link_to "答えをみる", post_path(post) %>
    </p>
    <%# link_to "[編集]", edit_post_path(post) %>
    <%= link_to "[×]",
        post_path(post),
        method: :delete,
        data: { confirm: "クイズを削除しますか？" } %>
    </li>
 <% end %>
</ul>